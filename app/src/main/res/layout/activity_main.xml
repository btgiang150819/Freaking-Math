<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#A1D0F6">

    <TextView
        android:id="@+id/tieude"
        android:textColor="#F31313"
        android:gravity="center"
        android:text="Freaking Math"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:background="#62E467"
        android:id="@+id/yourscore"
        android:orientation="horizontal"
        android:layout_below="@+id/tieude"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#F31313"
            android:textSize="30sp"
            android:text="Your Score : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/score"
            android:textColor="#F31313"
            android:text="100"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/calculation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/yourscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/a"
            android:background="#3EE418"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="50"
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/operator"
            android:background="#F82A2A"
            android:textSize="50sp"
            android:text=" + "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/b"
            android:background="#FF9800"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="50"
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/calculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:background="#0C85E4"
            android:text=" = "
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/res"
            android:layout_marginStart="10dp"
            android:background="#12EFDA"
            android:textSize="50sp"
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/dung"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/icondung"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageButton
            android:id="@+id/fail"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/iconsai"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </LinearLayout>
</RelativeLayout>